/* pages/order/order.wxss */
.item{
  margin: 40rpx;
  padding: 30rpx;
  display: flex;
  overflow-x: auto;
  flex-direction: column;
  box-shadow: 0px 0px 5px 0px #bbb;
}
.header{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: bolder;
}
.main{
  display: flex;
  flex-direction: column;
  overflow-x: auto;
  box-sizing: border-box;
}
.main-item{
  height: 230rpx;
  display: flex;
  overflow-x: auto;
  flex-direction: row;
}
.main-item image{
  overflow-x: auto;
  width: 200rpx;
  height: 200rpx;
}
.font{
  align-self: flex-end;
}
.cal-btn{
  align-self: flex-end;
}
.btn{
  margin: 20rpx;
}
.font{
  text-align: right;
  font-size: 24rpx;
  color: #999;
}
.font>text{
  font-size: 28rpx;
  color: #167f7b;
  margin: 0 10rpx;
}
.neirong{
  display: flex;
  justify-content: space-between;
}
.neirong>view{
  font-size: 28rpx;
}
.main-img-box{
  overflow-x: auto;
}