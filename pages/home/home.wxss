/* pages/home/home.wxss */
.lianjie{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.item{
  text-align: center;
  margin: 10rpx 0;
}

.main-container{
  margin-top: 10rpx;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.img-box{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}

.img-container{
  width: 48%;
  height: 48%;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.img-container image{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header{
  height: 70rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #bbb;
}

.header text{
  margin-left: 20rpx;
  color: #167f7b;
  font-size: 32rpx;
  font-weight: bolder;
}

.bg{
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center; 
  background-color: #167f7b; 
  height: 80rpx; 
  line-height: 80rpx; 
  color: white; 
  font-weight: bolder; 
  border-top: 1px solid #bbb;
  border-radius: 15rpx;
}

.search-btn{
  height: 60rpx;
  line-height: 60rpx;
  width: 98% !important;
  background-color: #167f7b;
  color: white;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
