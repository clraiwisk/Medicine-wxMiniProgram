.right{
  flex-grow: 1;
  height: 100%;
  overflow: auto;
  padding: 10px;
  box-sizing: border-box;
}
.right>.sub-box{
  width: 100%;
  height: 300rpx;
  display: flex;
}
.right-left{
  width: 200rpx;
}
.area{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 25rpx;
  height: 100rpx;
  margin:10rpx 0;
}
.right-left image{
  width: 200rpx;
  height: 200rpx;
}
.price{
  display: flex;
  justify-content: space-between;
  color: #167f7b;
  font-size: 30rpx;
}
.right-right{
  flex-grow: 1;
  padding: 0 20rpx;
}