/* pages/home/home.wxss */
page{
  height: 100%;
}

.box{
  height: 100%;
  width: 100%;
  display: flex;
  overflow: hidden;
}

.left{
  flex-shrink: 0;
  width: 200rpx;
  height: 100%;
  overflow: auto;
  padding: 0 10px;
  box-sizing: border-box;
  border-right: 2rpx solid #999;
}

.left::-webkit-scrollbar{
  display: none;
}

.left > .left-item{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left > .left-item > text{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 70%;
}

.actived{
  background-color: #f7f7f7;
  border-left: 10rpx solid #167f7b;
}

.right{
  flex-grow: 1;
  height: 100%;
  overflow: auto;
  padding: 10px;
  box-sizing: border-box;
}

.right > .sub-box{
  width: 100%;
  height: 300rpx;
  display: flex;
}

.right-left{
  width: 200rpx;
}

.area{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 25rpx;
  height: 100rpx;
  margin: 10rpx 0;
}

.right-left image{
  width: 200rpx;
  height: 200rpx;
}

.price{
  display: flex;
  justify-content: space-between;
  color: #167f7b;
  font-size: 30rpx;
}

.bg{
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center; 
  background-color: #167f7b; 
  height: 80rpx; 
  line-height: 80rpx; 
  color: white; 
  font-weight: bolder; 
  border-top: 1px solid #bbb;
}

.search-btn{
  height: 60rpx;
  line-height: 60rpx;
  width: 98%;
  background-color: white;
  color: #333;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
